///scr_get_stat_id(Stat_type_string)
var type = argument0;

switch(type)
{
    case "Damage" : return 0; break;
    case "Health" : return 1; break;
    case "Defense" : return 2; break;
    case "Movement Speed" : return 3; break;
    case "Critical Chance" : return 4; break;
    case "Critical Damage" : return 5; break;
    case "Cooldown Reduction" : return 6; break;
    case "Stun Recovery" : return 7; break;
    case "Health %" : return 8; break;
    case "Pickup Radius" : return 9; break;
    case "Attack Speed" : return 10; break;
    
    
}

